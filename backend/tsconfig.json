{
  "compilerOptions": {
    
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Ensure TypeScript emits compiled files
    "incremental": true,
    "module": "CommonJS", // Use CommonJS for Jest compatibility
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the `src` directory
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
